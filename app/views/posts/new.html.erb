<%= simple_form_for @post do |f| %>
    <%= f.input :title, placeholder: "Post Title" %>
    <%= f.input :text, as: :text, placeholder: "Your Post Here" %>
    <%= f.input :sport, label: "Sport", placeholder: "What sport is this about?" %>
    <%= f.button :submit, :class => "button tiny" %>
<% end %>

